<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="pref_set_alarm"
        android:summary="@string/set_alarm_on_or_off"
        android:title="@string/set_alarm" />
    <com.yisuho.simplenote.TimePreference
        android:dependency="pref_set_alarm"
        android:key="pref_set_time"
        android:summary="@string/set_time_default"
        android:title="@string/time" />
    <com.yisuho.simplenote.NumberPickerPreference
        android:dependency="pref_set_alarm"
        android:key="pref_set_repeat"
        android:summary="@string/repeat_summary_1"
        android:title="@string/repeat" />
</PreferenceScreen>